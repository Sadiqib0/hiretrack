# ============================================
# HireTrack - Environment Variables Template
# ============================================
# 
# IMPORTANT: 
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. NEVER commit .env to git
#
# ============================================

# === Database ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hiretrack_db
POSTGRES_USER=hiretrack_user
POSTGRES_PASSWORD=your_secure_password_here

# Database URL (for Prisma/TypeORM)
DATABASE_URL=postgresql://hiretrack_user:your_secure_password_here@localhost:5432/hiretrack_db

# === Redis ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === Backend API ===
BACKEND_PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001

# === JWT Authentication ===
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# === Google OAuth ===
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# === Stripe (Test Mode) ===
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_PRO=price_your_pro_plan_price_id

# === Email (SendGrid / Gmail SMTP) ===
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@hiretrack.com

# Alternative: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# === AWS S3 (for CV uploads) ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=hiretrack-cvs

# === Frontend (Next.js) ===
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# === Mobile App ===
MOBILE_API_URL=http://localhost:3001

# === Firebase Cloud Messaging (Optional) ===
FCM_SERVER_KEY=your_fcm_server_key_here

# === Security ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === Feature Flags ===
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
